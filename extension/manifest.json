{
  "manifest_version": 3,
  "name": "Focus-Roast ðŸ”¥",
  "version": "1.0",
  "description": "An AI blocker that bullies you into productivity.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
